# Backend Environment Variables
# Copy this file to .env and update values as needed

# Server Configuration
PORT=8001
HOST=localhost

# Database Configuration
MONGO_URI=mongodb+srv://your-username:your-password@cluster.mongodb.net/your-database-name

# Security Configuration
JWT_SECRET=your_strong_secret_here

# Frontend URLs (comma-separated for multiple origins)
# For development
FRONTEND_URLS=http://localhost:5173,http://localhost:3000
# For production (uncomment when deploying):
# FRONTEND_URLS=https://getmyproducts.com,https://www.getmyproducts.com

# Email/SMTP Configuration - Supports any SMTP provider
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Alternative SMTP settings (uncomment and configure for other providers)
# EMAIL_HOST=smtp.mailgun.org
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-mailgun-username
# EMAIL_PASS=your-mailgun-password

# For Outlook/Hotmail
# EMAIL_HOST=smtp-mail.outlook.com
# EMAIL_PORT=587
# EMAIL_SECURE=false

# For Yahoo
# EMAIL_HOST=smtp.mail.yahoo.com
# EMAIL_PORT=587
# EMAIL_SECURE=false

# For SendGrid
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=apikey
# EMAIL_PASS=your-sendgrid-api-key

# For AWS SES
# EMAIL_HOST=email-smtp.us-east-1.amazonaws.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-aws-ses-username
# EMAIL_PASS=your-aws-ses-password

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security and Rate Limiting
ENABLE_LOGGING=true
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true

# Process Management
GRACEFUL_SHUTDOWN_TIMEOUT=5000
MAX_EVENT_LISTENERS=100